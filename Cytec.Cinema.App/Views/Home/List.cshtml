@model System.Collections.Generic.List<Cytec.Cinema.Application.Features.Shows.Queries.BookingsVm>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h4>All Bookings</h4>


<table class="table table-hover table-list table-sm">
    <tr>
        <th>Booked On</th>
        <th>Name</th>
        <th>Email address</th>
        <th>Movie Title</th>
        <th>Tickets</th>
        <th>Amount</th>
    </tr>

    @if (Model.Count == 0)
    {
        <tr><td colspan="9"><div class="no-items">No items to display</div></td></tr>
    }

    @foreach (var booking in Model)
    {
        <tr>
            <td>@booking.BookingDate</td>
            <td>@booking.User</td>
            <td>@booking.UserEmail</td>
            <td>@booking.Movie</td>
            <td>@booking.Tickets</td>
            <td>@booking.Amount</td>
        </tr>
    }
</table>

<a class="btn btn-secondary" asp-action="Index">Back</a>

